<ul>
  <h1>Friends</h1>
  <% @user.friendships.each do |friendship| %>
      <li><%= friendship.friend.name%> <%= link_to "Remove", friendship, :method => :delete %></li>
  <%end%>

  <h1>Be friended with</h1>
  <%@user.inverse_friends.each do |inverse_friend|%>
      <li><%= inverse_friend.name %></li>
  <%end%>
</ul>